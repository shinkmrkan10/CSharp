        <Image Name="imageGrayF" Stretch="None" Grid.Column="4" Grid.Row="2" />
        <Image Name="imageRedF" Stretch="None" Grid.Column="4" Grid.Row="3" />
        <Image Name="imageGreenF" Stretch="None" Grid.Column="4" Grid.Row="4" />
        <Image Name="imageBlueF" Stretch="None" Grid.Column="4" Grid.Row="5" />
<!-- Grid.Column="1" Grid.Row="1" color -->
