                    <ComboBox x:Name="comboBox" ItemsSource="{Binding}" Width="180" Margin="5" 
                        SelectionChanged= "comboBox_SelectedValueChanged" SelectedValuePath="fname" 
                        DisplayMemberPath="fname" HorizontalAlignment="Center" SelectedIndex="0"/>
                    <Button Content="新規画像を開く(Ctrl+X)" Height="23" Width="150" Foreground="Black" Background="Pink"
                        HorizontalAlignment="Center" Margin="5" Click="folder_Change" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
