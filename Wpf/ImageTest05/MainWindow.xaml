                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1">
                    <Button Content="画像保存(Ctrl+S)" Height="23" Width="100" Foreground="Black" Background="Pink"
                        HorizontalAlignment="Center" Margin="10" Click="button_Click_Save" />
                    <TextBlock Text="右の画像を出力します =>" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" />
                    <TextBlock x:Name="textBlockSaveFile" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" />
                    <Button Content="終了(Ctrl+Z)" Height="23" Width="100" Foreground="White" Background="Red"
                        HorizontalAlignment="Center" Margin="5" Command="{Binding closeWindow}" />
               </StackPanel>
            </Grid>
        </StackPanel>
