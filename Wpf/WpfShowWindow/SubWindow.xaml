<Window x:Class="WpfShowWindow.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfShowWindow"
        mc:Ignorable="d"
        Title="SubWindow" Height="220" Width="220">
    <Grid>
        <TextBlock Name="closeText" Margin = "10" />  
        <Button Name="sw_close" Background="Yellow" 
                Margin = "30"
                Width = "120"
                Height = "30"
                BorderBrush="Black" BorderThickness="1" 
                Click="button_Click" ClickMode="Press">
            Close SubWindow
        </Button>
    </Grid>
</Window>
